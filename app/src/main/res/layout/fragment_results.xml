<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ResultsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10sp">

        <!--Button
            android:id="@+id/submitbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit design in Competition"
            android:background="@drawable/sqr_factor_btn_color"
            android:textAllCaps="false"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:paddingStart="5sp"
            android:paddingEnd="5sp"
            android:textColor="#fff"
            android:layout_marginBottom="20sp"
            android:layout_gravity="center"/-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="4">

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="Final Winners"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="10sp"
                android:layout_gravity="start"
                android:layout_weight="2.5"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="15/05/2018"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="10sp"
                android:layout_gravity="end"
                android:layout_weight="1.5"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Winner: "
            android:textColor="#000000"
            android:layout_marginBottom="10sp"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            app:cardElevation="2sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/designimg2"
                    android:scaleType="fitStart"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Design1"
                    android:textColor="#000"
                    android:layout_margin="5sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="YDAS365JQ9"
                    android:textColor="#000"
                    android:layout_marginBottom="5sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/gray_border">

                    <Button
                        android:id="@+id/like"
                        android:layout_width="100sp"
                        android:layout_height="50sp"
                        android:text="Like"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/like_xml"
                        android:drawableStart="@drawable/like_xml"
                        android:background="@android:color/transparent"
                        android:paddingLeft="10sp"
                        android:paddingStart="10sp"
                        android:paddingRight="10sp"
                        android:paddingEnd="10sp"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:gravity="start|center_vertical"
                        android:drawablePadding="10sp"/>

                    <Button
                        android:id="@+id/comment"
                        android:layout_width="100sp"
                        android:layout_height="50sp"
                        android:text="Comment"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/comment_xml"
                        android:drawableStart="@drawable/comment_xml"
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:gravity="start|center_vertical"
                        android:drawablePadding="10sp"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2nd Prize: "
            android:textColor="#000000"
            android:layout_marginBottom="10sp"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            app:cardElevation="2sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/designimg2"
                    android:scaleType="fitStart"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Design1"
                    android:textColor="#000"
                    android:layout_margin="5sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="YDAS365JQ9"
                    android:textColor="#000"
                    android:layout_marginBottom="5sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/gray_border">

                    <Button
                        android:id="@+id/like2"
                        android:layout_width="100sp"
                        android:layout_height="50sp"
                        android:text="Like"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/like_xml"
                        android:drawableStart="@drawable/like_xml"
                        android:background="@android:color/transparent"
                        android:paddingLeft="10sp"
                        android:paddingStart="10sp"
                        android:paddingRight="10sp"
                        android:paddingEnd="10sp"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:gravity="start|center_vertical"
                        android:drawablePadding="10sp"/>

                    <Button
                        android:id="@+id/comment2"
                        android:layout_width="100sp"
                        android:layout_height="50sp"
                        android:text="Comment"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/comment_xml"
                        android:drawableStart="@drawable/comment_xml"
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:gravity="start|center_vertical"
                        android:drawablePadding="10sp"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>