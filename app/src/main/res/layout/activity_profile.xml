<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/activity_toolbar"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/profile_cover_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/home_banner"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                android:adjustViewBounds="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="SqrFactor India Pvt. Ltd"
                android:fontFamily="@font/roboto_thin"
                android:textColor="#FFF"/>

            <ImageView
                android:id="@+id/profile_profile_image"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:padding="3dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:background="@color/white"
                android:src="@drawable/profilepic" />

            <TextView
                android:id="@+id/profile_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="SqrFactor"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_medium"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_marginTop="190sp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:weightSum="4">

            <TextView
                android:id="@+id/profile_blueprintcnt"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/sqr"
                android:gravity="center"/>

            <TextView
                android:id="@+id/profile_portfoliocnt"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/sqr"/>

            <TextView
                android:id="@+id/profile_followerscnt"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/sqr"
                android:gravity="center"/>

            <TextView
                android:id="@+id/profile_followingcnt"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="21"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/sqr"
                android:gravity="center"/>

            <TextView
                android:layout_width="40sp"
                android:layout_height="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/profile_blueprintClick"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Blueprint"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:textColor="@drawable/selector_follow"/>

            <TextView
                android:id="@+id/profile_portfolioClick"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:text="Portfolio"
                android:textColor="@drawable/selector_follow"/>

            <TextView
                android:id="@+id/profile_followersClick"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Followers"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:textColor="@drawable/selector_follow"/>

            <TextView
                android:id="@+id/profile_followingClick"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Following"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:textColor="@drawable/selector_follow"/>

            <ImageView
                android:id="@+id/profile_about_morebtn"
                android:layout_width="40sp"
                android:layout_height="20sp"
                android:src="@drawable/ellipsis"/>

        </LinearLayout>

        <Button
            android:id="@+id/profile_editprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/edit_profile"
            android:textColor="#000"
            android:text="Edit Profile"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto_medium"
            android:paddingLeft="10sp"
            android:paddingStart="10sp"
            android:paddingRight="10sp"
            android:paddingEnd="10sp"/>

        <ImageView
                android:id="@+id/profile_morebtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_more"
                android:layout_gravity="center"
                android:elevation="@dimen/cardview_default_elevation"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:orientation="vertical"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/profile_status_image"
                        android:layout_width="45sp"
                        android:layout_height="45sp"
                        android:src="@drawable/profilepic"/>

                    <EditText
                        android:id="@+id/profile_profile_write_post"
                        android:layout_width="match_parent"
                        android:layout_height="45sp"
                        android:background="@android:color/transparent"
                        android:gravity="top"
                        android:fontFamily="@font/roboto"
                        android:hint="Share your thoughts here..."
                        android:paddingEnd="10sp"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp"
                        android:paddingStart="10sp"
                        android:paddingTop="10sp"
                        android:textSize="15sp"/>

                </LinearLayout>

            </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_recycler">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</ScrollView>
</LinearLayout>