<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/activity_toolbar"/>

            <!--Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="20sp"
                android:background="@drawable/sqr_factor_btn_color"
                android:text="Post Job"
                android:textColor="#fff"
                android:layout_margin="20sp"
                android:textAllCaps="false"
                android:textSize="15sp"/-->

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:padding="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job Title"
                        android:textColor="#000"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6 months ago"
                        android:layout_marginBottom="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job Title/Position: Generic title"
                        android:textColor="@color/gray"
                        android:layout_marginTop="2sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category: Senior Architect"
                        android:textColor="@color/gray"
                        android:layout_marginTop="2sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type of Position: Full Time"
                        android:textColor="@color/gray"
                        android:layout_marginTop="2sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Work Experience: 2 years"
                        android:textColor="@color/gray"
                        android:layout_marginTop="2sp" />

                    <Button
                        android:id="@+id/detailsbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50sp"
                        android:paddingLeft="10sp"
                        android:paddingStart="10sp"
                        android:paddingRight="10sp"
                        android:paddingEnd="10sp"
                        android:background="@drawable/sqr_factor_btn_color"
                        android:text="See Details"
                        android:textColor="#fff"
                        android:textAllCaps="false"
                        android:layout_marginBottom="20sp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="10sp"
        app:backgroundTint="@color/sqr"
        android:src="@drawable/ic_add_black_24dp"
        android:clickable="true"
        android:focusable="true"
        app:rippleColor="#fff"/>

</android.support.design.widget.CoordinatorLayout>