<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SubmissionsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!--Button
            android:id="@+id/submitbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit design in Competition"
            android:background="@drawable/sqr_factor_btn_color"
            android:textAllCaps="false"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:paddingStart="5sp"
            android:paddingEnd="5sp"
            android:textColor="#fff"
            android:layout_marginBottom="20sp"
            android:layout_gravity="center"/-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to submit designs in competition correctly?"
                android:textColor="#000000"
                android:layout_marginBottom="15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end|right|center_vertical"
                android:layout_marginBottom="15sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sort by: "
                    android:textColor="#000000"
                    android:layout_marginRight="20sp"
                    android:layout_marginEnd="20sp"/>

                <Spinner
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:foreground="@drawable/gray_border"
                    android:padding="5sp"
                    android:entries="@array/sort_by"/>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                app:cardElevation="2sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/designimg2"
                        android:scaleType="fitStart"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Design1"
                        android:textColor="#000"
                        android:layout_margin="5sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="YDAS365JQ9"
                        android:textColor="#000"
                        android:layout_marginBottom="5sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/gray_border">

                        <Button
                            android:id="@+id/like"
                            android:layout_width="100sp"
                            android:layout_height="50sp"
                            android:text="Like"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:drawableLeft="@drawable/like_xml"
                            android:drawableStart="@drawable/like_xml"
                            android:background="@android:color/transparent"
                            android:paddingLeft="10sp"
                            android:paddingStart="10sp"
                            android:paddingRight="10sp"
                            android:paddingEnd="10sp"
                            android:textColor="@android:color/tertiary_text_dark"
                            android:gravity="start|center_vertical"
                            android:drawablePadding="10sp"/>

                        <Button
                            android:id="@+id/comment"
                            android:layout_width="100sp"
                            android:layout_height="50sp"
                            android:text="Comment"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:drawableLeft="@drawable/comment_xml"
                            android:drawableStart="@drawable/comment_xml"
                            android:background="@android:color/transparent"
                            android:textColor="@android:color/tertiary_text_dark"
                            android:gravity="start|center_vertical"
                            android:drawablePadding="10sp"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                app:cardElevation="2sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/designimg2"
                        android:scaleType="fitStart"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Design1"
                        android:textColor="#000"
                        android:layout_margin="5sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="YDAS365JQ9"
                        android:textColor="#000"
                        android:layout_marginBottom="5sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/gray_border">

                        <Button
                            android:id="@+id/like2"
                            android:layout_width="100sp"
                            android:layout_height="50sp"
                            android:text="Like"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:drawableLeft="@drawable/like_xml"
                            android:drawableStart="@drawable/like_xml"
                            android:background="@android:color/transparent"
                            android:paddingLeft="10sp"
                            android:paddingStart="10sp"
                            android:paddingRight="10sp"
                            android:paddingEnd="10sp"
                            android:textColor="@android:color/tertiary_text_dark"
                            android:gravity="start|center_vertical"
                            android:drawablePadding="10sp"/>

                        <Button
                            android:id="@+id/comment2"
                            android:layout_width="100sp"
                            android:layout_height="50sp"
                            android:text="Comment"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:drawableLeft="@drawable/comment_xml"
                            android:drawableStart="@drawable/comment_xml"
                            android:background="@android:color/transparent"
                            android:textColor="@android:color/tertiary_text_dark"
                            android:gravity="start|center_vertical"
                            android:drawablePadding="10sp"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="10sp"
        app:backgroundTint="@color/sqr"
        android:src="@drawable/ic_add_black_24dp"
        app:rippleColor="@android:color/white"
        android:clickable="true"
        android:focusable="true"/>

</android.support.design.widget.CoordinatorLayout>

