                            android:orientation="vertical"
                            android:layout_weight="3"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Keanu Reeves"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#000"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5 minutes ago"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="20sp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:src="@drawable/ellipsis"
                            android:layout_marginRight="5sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:paddingLeft="10sp"
                        android:paddingRight="20sp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Check out this new design, by me."
                            android:textStyle="bold"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/designimg"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10sp"

                        android:weightSum="3">

                        <Button
                            android:id="@+id/like3"
                            android:layout_width="0sp"
                            android:layout_height="50sp"
                            android:layout_weight="1"
                            android:text="Like"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:drawableLeft="@drawable/like_xml"
                            android:background="@android:color/transparent"
                            android:paddingLeft="10sp"
                            android:textColor="@android:color/tertiary_text_dark"
                            android:gravity="left|center_vertical"
                            android:drawablePadding="10sp"/>

                        <Button
                            android:id="@+id/comment2"
                            android:layout_width="0sp"
                            android:layout_height="50sp"
                            android:layout_weight="1"
                            android:text="Comment"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:drawableLeft="@drawable/comment_xml"
                            android:background="@android:color/transparent"
                            android:textColor="@android:color/tertiary_text_dark"
                            android:gravity="left|center_vertical"
                            android:drawablePadding="10sp"/>

                        <Button
                            android:id="@+id/share2"
                            android:layout_width="0sp"
                            android:layout_height="50sp"
                            android:layout_weight="1"
                            android:text="Share"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:drawableLeft="@drawable/share_xml"
                            android:background="@android:color/transparent"
                            android:textColor="@android:color/tertiary_text_dark"
                            android:gravity="left|center_vertical"
                            android:drawablePadding="10sp"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20sp"
                app:cardElevation="1sp"
                app:cardBackgroundColor="#e6ecf5"
                android:layout_marginBottom="2sp"
                android:layout_marginHorizontal="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <ImageView
                            android:layout_width="0sp"
                            android:layout_height="60sp"
                            android:src="@drawable/henry"
                            android:layout_weight="1"
                            android:layout_marginTop="10sp"
                            android:layout_marginLeft="10sp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="4"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Henry Cavill"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#000"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5 minutes ago"
                                android:textStyle="bold"/>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nice work there!"
                        android:textStyle="bold"
                        android:paddingLeft="20sp"/>

                    <Button
                        android:id="@+id/like4"
                        android:layout_width="100sp"
                        android:layout_height="50sp"
                        android:text="Like"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/like_xml"
                        android:background="@android:color/transparent"
                        android:paddingLeft="20sp"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:gravity="left|center_vertical"
                        android:drawablePadding="10sp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_marginBottom="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20sp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            android:src="@drawable/profilepic"
                            android:layout_marginTop="10sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="60sp"
                            android:layout_margin="10sp"
                            android:hint="Write comment..."
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:background="@drawable/shapes"
                            android:padding="10sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:orientation="horizontal"
                        android:gravity="end">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp"
                            android:text="Post Reply"
                            android:textAllCaps="false"
                            android:textColor="#fff"
                            android:background="@drawable/shapes5"
                            android:textStyle="bold"
                            android:paddingHorizontal="10sp"
                            android:layout_gravity="end|center_vertical"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>
</FrameLayout>