<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostEvent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/activity_toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15sp"
            android:focusableInTouchMode="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Title/Position"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginBottom="5sp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/gray_border"
                android:padding="10sp"
                android:layout_gravity="center"
                android:layout_marginBottom="10sp"
                app:hintTextAppearance="@color/colorAccent">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:hint="Job Title"
                    android:padding="5sp"
                    android:inputType="text"/>

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginBottom="5sp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:background="@drawable/gray_border"
                android:padding="10sp"
                android:layout_gravity="center"
                android:layout_marginBottom="10sp"
                app:hintTextAppearance="@color/colorAccent">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:background="@android:color/transparent"
                    android:hint="Describe the responsibilities of this position."
                    android:padding="5sp"
                    android:inputType="text"/>

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job category"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginBottom="5sp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:foreground="@drawable/gray_border"
                android:padding="10sp"
                android:entries="@array/category"
                android:layout_marginBottom="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position type"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginBottom="5sp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:foreground="@drawable/gray_border"
                android:padding="10sp"
                android:entries="@array/positions"
                android:layout_marginBottom="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work experience"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginBottom="5sp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:foreground="@drawable/gray_border"
                android:padding="10sp"
                android:entries="@array/workex"
                android:layout_marginBottom="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salary"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginBottom="5sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <EditText
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/gray_border"
                    android:hint="Minimum"
                    android:padding="5sp"
                    android:inputType="text"
                    android:layout_weight="1"
                    android:layout_margin="5sp"/>

                <EditText
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/gray_border"
                    android:hint="Maximum"
                    android:padding="5sp"
                    android:inputType="text"
                    android:layout_weight="1"
                    android:layout_margin="5sp"/>

                <Spinner
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:foreground="@drawable/gray_border"
                    android:padding="10sp"
                    android:entries="@array/currency"
                    android:layout_marginBottom="10sp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skills"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginBottom="5sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/gray_border"
                android:hint="Add skills you are looking for"
                android:padding="15sp"
                android:inputType="text"
                android:layout_marginBottom="5sp"/>

            <TextView
                android:id="@+id/add_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add more+"
                android:layout_marginBottom="10sp"/>

            <EditText
                android:id="@+id/skill1"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/gray_border"
                android:hint="Add skills you are looking for"
                android:padding="15sp"
                android:inputType="text"
                android:layout_marginBottom="5sp"/>

            <EditText
                android:id="@+id/skill2"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/gray_border"
                android:hint="Add skills you are looking for"
                android:padding="15sp"
                android:inputType="text"
                android:layout_marginBottom="5sp"/>

            <EditText
                android:id="@+id/skill3"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/gray_border"
                android:hint="Add skills you are looking for"
                android:padding="15sp"
                android:inputType="text"
                android:layout_marginBottom="5sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Educational Qualification"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginBottom="5sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/gray_border"
                android:hint="Add qualification"
                android:padding="15sp"
                android:inputType="text"
                android:layout_marginBottom="5sp"/>

            <TextView
                android:id="@+id/add_more2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add more+"
                android:layout_marginBottom="10sp"/>

            <EditText
                android:id="@+id/qual1"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/gray_border"
                android:hint="Add qualification"
                android:padding="15sp"
                android:inputType="text"
                android:layout_marginBottom="5sp"/>

            <EditText
                android:id="@+id/qual2"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/gray_border"
                android:hint="Add qualification"
                android:padding="15sp"
                android:inputType="text"
                android:layout_marginBottom="5sp"/>

            <EditText
                android:id="@+id/qual3"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/gray_border"
                android:hint="Add qualification"
                android:padding="15sp"
                android:inputType="text"
                android:layout_marginBottom="5sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Firm"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginBottom="5sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/gray_border"
                android:hint="Firm - Sqr Factor India PVT LTD"
                android:padding="15sp"
                android:inputType="text"
                android:layout_marginBottom="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginBottom="5sp"/>

            <Spinner
                android:id="@+id/country_spinner"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:foreground="@drawable/gray_border"
                android:padding="10sp"
                android:layout_marginBottom="10sp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:foreground="@drawable/gray_border"
                android:padding="10sp"
                android:entries="@array/countries"
                android:layout_marginBottom="10sp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:foreground="@drawable/gray_border"
                android:padding="10sp"
                android:entries="@array/countries"
                android:layout_marginBottom="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job offer expires on"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginBottom="5sp"/>

            <EditText
                android:id="@+id/expirydate"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:gravity="center_vertical"
                android:hint="Enter Date"
                android:background="@drawable/gray_border"
                android:padding="15sp"
                android:inputType="date"
                android:layout_marginBottom="10sp"
                android:focusable="false"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:background="@drawable/sqr_factor_btn_color"
                android:text="Post Job"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingLeft="10sp"
                android:paddingStart="10sp"
                android:paddingRight="10sp"
                android:paddingEnd="10sp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>