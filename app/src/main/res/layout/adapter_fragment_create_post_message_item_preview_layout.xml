<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="4dp"
            android:elevation="0dp">

            <ImageView
                android:id="@+id/adapter_fragment_create_post_message_item_preview_imageview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/home_banner" />

            <View
                android:id="@+id/view_gradiant"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/white" />

        </android.support.v7.widget.CardView>


        <ImageButton
            android:id="@+id/adapter_fragment_create_post_message_item_delete_imagebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:layout_margin="4dp"
            android:src="@drawable/ic_close_black_24dp"
            android:elevation="2dp"
            android:background="@null"/>

    </FrameLayout>
    <EditText
        android:id="@+id/adapter_fragment_create_post_message_item_add_caption_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="Hello"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:visibility="gone"/>

</LinearLayout>
