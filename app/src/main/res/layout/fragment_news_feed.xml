<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NewsFeedFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/White"
        android:weightSum="2">

        <Button
            android:id="@+id/newsFeedbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="News Feed"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="#888da8"
            android:textAllCaps="false"
            android:background="@drawable/gray_border"/>
        <Button
            android:id="@+id/whatsRedbtn"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="What's Red?"
            android:padding="10sp"
            android:textAllCaps="false"
            android:textColor="#888da8"
            android:textStyle="bold"
            android:background="@drawable/gray_border"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/newsProfileImage"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:src="@drawable/profilepic" />

        <EditText
            android:id="@+id/news_editPost"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:focusable="false"
            android:hint="Share your thoughts here..."
            android:paddingEnd="10sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:paddingStart="10sp"
            android:paddingTop="10sp"
            android:textSize="15sp" />

    </LinearLayout>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment"
        android:orientation="vertical">
    </LinearLayout>
    <include layout="@layout/layout_fab_view"/>
</FrameLayout>

</LinearLayout>