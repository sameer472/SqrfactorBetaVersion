<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="10sp"
        android:id="@+id/college_linear"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/architectureCollege_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/henry"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/architectureCollege_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Henry Cavill"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginLeft="10sp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/architectureCollege_college"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Architecture College"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_thin"
                android:layout_marginLeft="10sp"
                android:layout_marginStart="10dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
