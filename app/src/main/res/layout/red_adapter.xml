<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10sp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:id="@+id/red_authImage"
                    android:layout_width="0sp"
                    android:layout_height="60sp"
                    android:src="@drawable/henry"
                    android:layout_weight="1"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginStart="10sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10sp"
                    android:layout_marginStart="10sp">

                    <TextView
                        android:id="@+id/red_authName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Henry Cavill"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_medium"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/red_postTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 minutes ago"
                            android:fontFamily="@font/roboto"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" |"
                            android:fontFamily="@font/roboto_medium"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_red_eye"
                            android:layout_marginStart="5sp"
                            android:layout_marginLeft="5sp" />
                        <TextView
                            android:id="@+id/red_postViews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="146"
                            android:textSize="12sp"
                            android:layout_marginStart="3sp"
                            android:fontFamily="@font/roboto"
                            android:layout_marginLeft="3sp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/red_menu"
                    android:layout_width="24sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_more_verticle"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="10sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:paddingLeft="10sp"
                android:paddingStart="10sp"
                android:paddingRight="10sp"
                android:paddingEnd="10sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/red_postTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check out this new design, by me."
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginTop="5sp"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/red_postDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check out this new design, by me."
                    android:fontFamily="@font/roboto"
                    android:layout_marginTop="5sp"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/red_postImage"
                    android:layout_marginTop="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/build"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginLeft="10dp">

                    <CheckBox
                        android:id="@+id/red_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:clickable="true"
                        android:button="@null"
                        android:checked="false"
                        android:stateListAnimator="@animator/scale"
                        android:background="@drawable/news_like"
                        android:focusable="true"/>

                    <TextView
                        android:id="@+id/red_likeList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="16sp"
                        android:background="@android:color/transparent"
                        android:text="0 Like"
                        android:textColor="@color/gray"
                        android:textAllCaps="false"
                        android:fontFamily="@font/roboto"
                        android:layout_marginLeft="16sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/red_comment"
                    android:layout_width="0sp"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:text="0 Comment"
                    android:textAllCaps="false"
                    android:fontFamily="@font/roboto"
                    android:drawableLeft="@drawable/ic_commentbtn"
                    android:drawableStart="@drawable/ic_commentbtn"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:gravity="start|center_vertical"
                    android:drawablePadding="10sp"/>

                <Button
                    android:id="@+id/red_share"
                    android:layout_width="0sp"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:text="Share"
                    android:textAllCaps="false"
                    android:fontFamily="@font/roboto"
                    android:drawableLeft="@drawable/ic_share_square"
                    android:drawableStart="@drawable/ic_share_square"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:gravity="start|center_vertical"
                    android:drawablePadding="10sp"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/red_commentListCard"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gray_border"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="20sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10sp"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/red_commenterProfile"
                    android:layout_width="0sp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10sp"
                    android:layout_marginStart="10sp"
                    android:layout_weight="1"
                    android:src="@drawable/henry" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="4"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5sp"
                    android:layout_marginStart="5sp">

                    <TextView
                        android:id="@+id/red_commentUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Henry Cavill"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_medium"/>

                    <TextView
                        android:id="@+id/red_commentTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 minutes ago"
                        android:fontFamily="@font/roboto"
                        android:textSize="12sp"/>

                </LinearLayout>
                <ImageView
                    android:id="@+id/red_comment_menu"
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:layout_gravity="end|center"
                    android:src="@drawable/ic_more_verticle"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="10sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/red_commentMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nice work there!"
                android:textSize="16dp"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="20sp"
                android:layout_marginStart="65sp"/>

            <Button
                android:id="@+id/red_commenterlike"
                android:layout_width="match_parent"
                android:layout_height="24sp"
                android:text="Like"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto"
                android:textColor="@color/gray"
                android:drawableLeft="@drawable/ic_comment_like1"
                android:drawableStart="@drawable/ic_comment_like1"
                android:background="@android:color/transparent"
                android:paddingLeft="20sp"
                android:paddingStart="20sp"
                android:paddingRight="20sp"
                android:paddingEnd="20sp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="20sp"
                android:gravity="start|center_vertical"
                android:drawablePadding="10sp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/gray_line"
            android:orientation="horizontal"
            android:paddingLeft="10sp"
            android:paddingRight="10sp">

                <ImageView
                    android:id="@+id/red_userProfile"
                    android:layout_width="35dp"
                    android:layout_height="35sp"
                    android:layout_gravity="center"
                    android:src="@drawable/profilepic" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginStart="5sp"
                android:background="@drawable/round_edit_text">
                <EditText
                    android:id="@+id/red_userComment"
                    android:layout_marginStart="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:hint="Write a comment..."
                    android:padding="10sp"
                    android:textSize="14dp"
                    android:background="@android:color/transparent"
                    android:layout_centerVertical="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/red_commentPostbtn"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/roboto"
                android:padding="2dp"
                android:text="Post"
                android:textAllCaps="false"
                android:textColor="@color/sqr" />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    </LinearLayout>
