<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/gray_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:weightSum="5">

                <ImageView
                    android:id="@+id/commenterProfileImage"
                    android:layout_width="0sp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:src="@drawable/henry" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_marginStart="5sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5sp">
                    <TextView
                        android:id="@+id/commenterUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Henry Cavill"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_medium"/>

                    <TextView
                        android:id="@+id/timeAgo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 minutes ago"
                        android:fontFamily="@font/roboto"
                        android:textSize="12sp"/>
                </LinearLayout>

        <ImageView
            android:id="@+id/comment_menu"
            android:layout_width="20sp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:visibility="gone"
            android:src="@drawable/ic_more"
            android:layout_marginRight="5sp"
            android:layout_marginLeft="5sp"/>
            </LinearLayout>

                <TextView
                    android:id="@+id/commentBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nice work there!"
                    android:fontFamily="@font/roboto"
                    android:textSize="16sp"
                    android:layout_marginTop="6sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginStart="65sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5sp"
        android:layout_marginStart="70sp"
        android:layout_marginLeft="20sp"
        android:layout_marginBottom="20sp">
            <CheckBox
                android:id="@+id/commentLike"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:clickable="true"
                android:button="@null"
                android:checked="false"
                android:layout_gravity="center"
                android:stateListAnimator="@animator/scale"
                android:background="@drawable/news_like"
                android:focusable="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/numberOfLike"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:text="10 "/>
            </LinearLayout>
</LinearLayout>